<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
  <Appenders>
    <Console name="STDOUT" target="SYSTEM_OUT">
      <PatternLayout
        disableAnsi="false"
        pattern="%style{%d}{bright_black} %style{%class{1.1.1.*}:%line}{magenta} %highlight{%-5level [%10t]  %msg}{FATAL=red, ERROR=bright_red, WARN=bright_yellow bold, INFO=white, DEBUG=bright_black, TRACE=black}%n"
      />
    </Console>

    <RollingRandomAccessFile name="RollingRandomAccessFile" fileName="logs/current.log"
                             filePattern="logs/$${date:yyyy-MM}/log-%d{yyyy-MM-dd-HH}-%i.log.gz">
      <PatternLayout>
        <Pattern>%d %p %c{1.} [%t] %m%n</Pattern>
      </PatternLayout>
      <Policies>
        <SizeBasedTriggeringPolicy size="250 MB"/>
      </Policies>
    </RollingRandomAccessFile>
  </Appenders>

  <Loggers>
    <Root level="trace">
      <AppenderRef ref="STDOUT"/>
      <AppenderRef ref="RollingRandomAccessFile"/>
    </Root>
  </Loggers>
</Configuration>
